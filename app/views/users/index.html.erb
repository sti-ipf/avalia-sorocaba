<h1>Listing users</h1>

<table>
  <tr>
    <th>Institution</th>
    <th>Service level</th>
    <th>Segment</th>
    <th>Password</th>
  </tr>

<% @users.sort.each do |user| %>
  <tr>
    <td><%=h user.institution.name %></td>
    <td><%=h user.service_level.name %></td>
    <td><%=h user.segment.name %></td>
    <td><%=h user.password %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

